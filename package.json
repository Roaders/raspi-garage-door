{
    "name": "garage-door-opener",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "postinstall": "npm run install:server",
        "install:server": "cd garage-door-server && npm install",
        "clean": "rimraf dist",
        "lint": "concurrently --kill-others-on-fail npm:lint:*",
        "lint:server": "cd garage-door-server && npm run lint",
        "lint:ui": "cd garage-door-ui && npm run lint",
        "lint:rpi-garage-door": "cd rpi-garage-door && npm run lint",
        "start": "npm run clean && mkdir \"dist/garage-door-ui/\" && concurrently --kill-others-on-fail npm:start:*",
        "start:server": "cd garage-door-server && npm run start:dev",
        "start:ui": "cd garage-door-ui && npm run start",
        "build": "concurrently --kill-others-on-fail npm:build:*",
        "build:server": "cd garage-door-server && npm run build",
        "build:ui": "cd garage-door-ui && npm run build",
        "build:util": "tsc -p util/tsconfig.json",
        "start-prod": "node -r dotenv/config dist/garage-door-server/src/main.js",
        "create-user": "node dist/util/createUser",
        "check-user": "node dist/util/checkUser",
        "generate-secret": "node dist/util/generateSecret"
    },
    "dependencies": {
        "@nestjs/common": "^7.0.0",
        "@nestjs/core": "^7.0.0",
        "@nestjs/jwt": "^7.0.0",
        "@nestjs/passport": "^7.0.0",
        "@nestjs/platform-express": "^7.0.0",
        "@nestjs/serve-static": "^2.1.1",
        "bcryptjs": "^2.4.3",
        "chalk": "^4.0.0",
        "dotenv": "^8.2.0",
        "passport": "^0.4.1",
        "passport-http": "^0.3.0",
        "passport-jwt": "^4.0.0",
        "passport-local": "^1.0.0",
        "prompts": "^2.3.2",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^6.5.4"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "~0.901.6",
        "@angular/animations": "~9.1.7",
        "@angular/cli": "~9.1.6",
        "@angular/common": "~9.1.7",
        "@angular/compiler": "~9.1.7",
        "@angular/compiler-cli": "~9.1.7",
        "@angular/core": "~9.1.7",
